{
  "name": "austa-v3-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for AUSTA V3 B2B Expansion Sales Machine",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:report": "open coverage/lcov-report/index.html",
    "test:performance": "k6 run tests/performance/load-test.js",
    "test:security": "npm run test:security:owasp && npm run test:security:deps",
    "test:security:owasp": "zap-cli quick-scan --self-contained http://localhost:8080",
    "test:security:deps": "npm audit --audit-level=moderate",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance && npm run test:security"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "supertest": "^6.3.3",
    "nock": "^13.5.0",
    "k6": "^0.48.0",
    "dotenv": "^16.3.1"
  },
  "dependencies": {
    "camunda-external-task-client-js": "^3.0.0",
    "axios": "^1.6.2"
  }
}
